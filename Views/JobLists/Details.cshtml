@model Fpt.Models.JobList

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>JobList</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RequiredSkills)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequiredSkills)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Application)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Application.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <h4>Job Applications</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.JobApplication.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobApplication.First().DescribeYourself)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jobApplication in Model.JobApplication)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => jobApplication.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => jobApplication.DescribeYourself)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>